name:                rasa-ext-slate
version:             0.1.1
synopsis:            Rasa extension for rendering to terminal with vty
description:         Rasa extension for rendering to terminal with vty
homepage:            https://github.com/ChrisPenner/rasa/
license:             MIT
license-file:        LICENSE
author:              Chris Penner
maintainer:          christopher.penner@gmail.com
copyright:           2016 Chris Penner
category:            Extension
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:
                       Rasa.Ext.Slate
  other-modules:
                       Rasa.Ext.Slate.Internal.Render
                       Rasa.Ext.Slate.Internal.Event
                       Rasa.Ext.Slate.Internal.State
                       Rasa.Ext.Slate.Internal.Attributes

  build-depends:       base >= 4.8 && < 5
                     , rasa
                     , rasa-ext-style
                     , rasa-ext-status-bar
                     , rasa-ext-viewports
                     , text
                     , yi-rope
                     , lens
                     , vty >= 5.14
                     , rasa-ext-logger
  default-language:    Haskell2010

  ghc-options:         -Wall

source-repository head
  type:     git
  location: https://github.com/ChrisPenner/rasa
